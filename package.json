{
  "name": "auto-reload-backend",
  "displayName": "Auto Reload Backend",
  "description": "Automatically reloads Node.js backend and browser on file changes for seamless web development",
  "version": "0.0.1",
  "publisher": "BamaCharanChhandogi",
  "engines": {
    "vscode": "^1.91.0"
  },
  "icon": "images/logo.jpeg",
  "repository": {
    "type": "git",
    "url": "https://github.com/BamaCharanChhandogi/Auto-Reload-Backend"
  },
  "keywords": [
    "auto reload",
    "live reload",
    "hot reload",
    "backend",
    "nodejs",
    "web development",
    "productivity"
  ],
  "categories": [
    "Other",
    "Debuggers",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:ejs",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:vue",
    "onLanguage:svelte"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.toggleAutoReload",
        "title": "Toggle Auto-Reload Backend"
      }
    ],
    "configuration": {
      "title": "Auto Reload Backend",
      "properties": {
        "autoReloadBackend.websocketPort": {
          "type": "number",
          "default": 8080,
          "description": "Port for the WebSocket server"
        },
        "autoReloadBackend.watchFolders": {
          "type": "array",
          "default": ["src", "public"],
          "description": "Folders to watch for changes"
        },
        "autoReloadBackend.fileTypes": {
          "type": "array",
          "default": [".js", ".ts", ".html", ".css", ".ejs"],
          "description": "File types that trigger a reload"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@types/ws": "^8.5.11",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "ws": "^8.18.0"
  }
}